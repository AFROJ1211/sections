  <script>
    const carouselContainer = document.getElementById('carousel-container');
    const imageWrappers = document.querySelectorAll('.carousel .image-wrapper');
    const dotsContainer = document.getElementById('dots');
    const total = imageWrappers.length;
    const positions = ['pos-3','pos-2','pos-1','pos0','pos1','pos2','pos3'];
    const offsetByClass = { 'pos-3':-3, 'pos-2':-2, 'pos-1':-1, 'pos0':0, 'pos1':1, 'pos2':2, 'pos3':3 };

    let idx = 0, auto = null;
    let startX = 0, lastX = 0, velocity = 0, lastTime = 0;

    // dots
    for (let i = 0; i < total; i++) {
      const dot = document.createElement('div');
      dot.className = 'dot';
      dot.dataset.idx = i;
      dotsContainer.appendChild(dot);
    }
    const dots = document.querySelectorAll('.dot');

    function update() {
      for (let i = 0; i < positions.length; i++) {
        const wrapperIdx = (idx + i - 3 + total) % total;
        imageWrappers[wrapperIdx].className = 'image-wrapper ' + positions[i];
      }
      dots.forEach((d, i) => d.classList.toggle('active', i === idx));
    }

    function go(dir) {
      idx = (idx + dir + total) % total;
      update();
    }

    function startAuto(){ auto = setInterval(() => go(1), 3000); }
    function stopAuto(){ clearInterval(auto); }

    // momentum swipe
    carouselContainer.addEventListener('touchstart', e => {
      stopAuto();
      startX = e.touches[0].clientX;
      lastX = startX;
      lastTime = Date.now();
      velocity = 0;
    });
    carouselContainer.addEventListener('touchmove', e => {
      const currentX = e.touches[0].clientX;
      const deltaX = currentX - lastX;
      const deltaTime = Date.now() - lastTime;
      velocity = deltaX / Math.max(1, deltaTime);
      lastX = currentX;
      lastTime = Date.now();
    });
    carouselContainer.addEventListener('touchend', () => {
      const distance = lastX - startX;
      if (Math.abs(distance) > 40) {
        const dir = distance < 0 ? 1 : -1;
        const momentum = Math.abs(velocity) > 0.5 ? 2 : 1;
        go(dir * momentum);
      }
      startAuto();
    });

    // fix: tap-to-focus using current class (never miscalculates)
    imageWrappers.forEach((wrapper) => {
      wrapper.addEventListener('click', (e) => {
        // If this isn't the center, focus it; don't navigate
        const cls = [...wrapper.classList].find(c => c.startsWith('pos'));
        const offset = offsetByClass[cls] ?? 0;

        if (offset !== 0) {
          e.preventDefault(); // stop link highlight/navigation
          stopAuto();
          idx = (idx + offset + total) % total; // jump directly
          update();
          startAuto();
        }
        // if offset === 0, it's centered â†’ allow link to work normally
      }, { capture:true }); // capture ensures we intercept before link
    });

    // Optional: dot navigation
    dots.forEach(d => d.addEventListener('click', () => {
      stopAuto();
      idx = +d.dataset.idx;
      update();
      startAuto();
    }));

    // Pause on hover (desktop)
    carouselContainer.addEventListener('mouseenter', stopAuto);
    carouselContainer.addEventListener('mouseleave', startAuto);

    update();
    startAuto();
  </script>
</body>
