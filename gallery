      </div>
    </div>

    <div class="dots" id="dots"></div>
  </section>

  <script>
    const track   = document.getElementById('track');
    const imgs    = document.querySelectorAll('.carousel img');
    const dotsContainer = document.getElementById('dots');

    const total   = imgs.length;
    let   idx     = 0;
    let   auto    = null;

    const positions = ['pos-3','pos-2','pos-1','pos0','pos1','pos2','pos3'];

    /* ---- Build dots ---- */
    for (let i = 0; i < total; i++) {
      const d = document.createElement('div');
      d.className = 'dot';
      d.dataset.idx = i;
      dotsContainer.appendChild(d);
    }
    const dots = document.querySelectorAll('.dot');

    function update() {
      for (let i = 0; i < positions.length; i++) {
        const imgIdx = (idx + i - 3 + total) % total;
        imgs[imgIdx].className = positions[i];
      }

      const center = imgs[idx];
      center.classList.add('flip');
      setTimeout(() => center.classList.remove('flip'), 1600);

      dots.forEach((d, i) => d.classList.toggle('active', i === idx));
    }

    function go(dir) {
      clearInterval(auto);
      idx = (idx + dir + total) % total;
      update();
      startAuto();
    }

    function startAuto() {
      auto = setInterval(() => go(1), 3000);
    }

    // Dot navigation only
    dots.forEach(d => d.addEventListener('click', () => {
      clearInterval(auto);
      idx = +d.dataset.idx;
      update();
      startAuto();
    }));

    // Init
    update();
    startAuto();
  </script>
</body>
