    <div class="carousel">
      <div class="carousel-track" id="track">
        <img src="https://via.placeholder.com/300x400/4A90E2/ffffff?text=1" alt="1">
        <img src="https://via.placeholder.com/300x400/50E3C2/ffffff?text=2" alt="2">
        <img src="https://via.placeholder.com/300x400/9013FE/ffffff?text=3" alt="3">
        <img src="https://via.placeholder.com/300x400/F5A623/ffffff?text=4" alt="4">
