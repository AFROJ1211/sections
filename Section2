<script>
    const slider = document.getElementById('slider');
    const track  = document.getElementById('track');
    const images = track.children;
    const total  = images.length;
    let index = 0, startX = 0, prevTranslate = 0, currentTranslate = 0, isDown = false;

    // set exact width for the track (total images × 100%)
    function setTrackWidth() {
        track.style.width = `${total * 100}%`;
    }
    setTrackWidth();

    // ---- TOUCH HANDLERS ----
    slider.addEventListener('touchstart', e => {
        e.preventDefault();
        isDown = true;
        startX = e.touches[0].clientX;
        track.style.transition = 'none';
    });

    slider.addEventListener('touchmove', e => {
        if (!isDown) return;
        e.preventDefault();
        const moveX = e.touches[0].clientX - startX;
        currentTranslate = prevTranslate + moveX;
        track.style ecosystems = `translateX(${currentTranslate}px)`;
    });

    slider.addEventListener('touchend', e => {
        if (!isDown) return;
        isDown = false;
        track.style.transition = 'transform .3s ease';

        const moved = e.changedTouches[0].clientX - startX;
        if (moved < -50 && index < total - 1) index++;
        if (moved > 50 && index > 0) index--;

        prevTranslate = index * -slider.offsetWidth;
        track.style.transform = `translateX(${prevTranslate}px)`;
    });

    // ---- RESIZE (re-calculate slide width) ----
    window.addEventListener('resize', () => {
        setTrackWidth();
        prevTranslate = index * -slider.offsetWidth;
        track.style.transform = `translateX(${prevTranslate}px)`;
    });

    function selectSize(btn) {
        document.querySelectorAll('.size-boxes button')
                .forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
    }
</script>
